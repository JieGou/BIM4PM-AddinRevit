<UserControl
    x:Class="ProjectManagement.Utils.ProgressBar.VerticalProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManagement.Utils.ProgressBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/ProjectManagement;component/Resources/UI/ProgressBar/ProgressbarResource.xaml" />

    </UserControl.Resources>
    <Grid>
        <!--  linear progress bars (the default style  -->
        <ProgressBar Orientation="Vertical" Value="25" />
    </Grid>
</UserControl>
