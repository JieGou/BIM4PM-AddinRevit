<Window x:Class="ProjectManagement.FormInterface.frm_ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagement.FormInterface"
             mc:Ignorable="d" Topmost="True" Name="windowPrg" Title="{Binding Pourcentage}"
              Height="100"  Width="350" ResizeMode="NoResize">
    <Grid>
        <ProgressBar Name="prgBar" Width="300" Height="35" Minimum="0" Maximum="100" Value="{Binding WorkerState}"></ProgressBar>
    </Grid>
</Window>
